{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "global.d.ts", "components.d.ts", "auto-imports.d.ts", "src/**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "types": ["vite/client"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
